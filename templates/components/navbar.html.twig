<div{{ attributes }}>
    <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            Categories
        </button>
        <ul class="dropdown-menu">
            {% for category in this.categories %}
                <li class="px-3">
                    <a class="dropdown-item text-primary px-0" href="/category/{{ category.name }}">{{ category.name }}</a>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>
