<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>
        {% block title %}Welcome!
        {% endblock %}
    </title>
    <link rel="icon" href="{{ asset('build/images/favicon.ico') }}"/>
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
    <header>
        {% include "Include/_navbar.html.twig" %}

        {% for category, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ category }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </header>
</head>
<body {{ stimulus_controller('symfony/ux-swup/swup') }} {{ stimulus_controller('theme') }}
        {{ stimulus_target('theme', 'body') }}>
<div id="swup">
    {% block body %}
    {% endblock %}
</div>
{{ component('last_episode') }}
</body>
</html>
